@model WebApp.Models.TokenViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>

</head>
<body>
    <div>
        <span id="tokenvalue">@Model.TokenValue</span>
        <hr />
        <span>@Model.PlainToken</span>
    </div>

    <button class="button" onclick="saveToken()">
        Save Token
    </button>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script type="text/javascript">
        function saveToken() {
            var tokenValue = document.getElementById("tokenvalue").innerText;
            localStorage.setItem('jwtTokenValue', tokenValue);
        };
    </script>
</body>

</html>

